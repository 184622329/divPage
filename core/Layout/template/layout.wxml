<!-- 布局组件 -->
<template name="layout">
<!-- 文字  -->
<view
  catchtouchstart="{{layoutIndex == index ? LayoutMoveStart : ''}}"
  catchtouchmove="{{layoutIndex == index ? LayoutMove : ''}}"
  catchtouchend="{{layoutIndex == index ? LayoutMoveEnd: ''}}"
  catchtap="{{layoutIndex == index ? '': LayoutTap}}"
  data-index='{{index}}'
  data-type='{{item.type}}'
  class="{{item.class}} {{layoutIndex == index ? 'layout-avtive' : ''}}"
  wx:if='{{item.key == "text"}}'
  style="{{item.css}};top:{{item.attr.top}}px;left:{{item.attr.left}}px;">
    <text>{{item.val}}</text>
  </view>
  <!-- 图片  -->
  <image
    catchtouchstart="{{layoutIndex == index ? LayoutMoveStart : ''}}"
    catchtouchmove="{{layoutIndex == index ? LayoutMove : ''}}"
    catchtouchend="{{layoutIndex == index ? LayoutMoveEnd: ''}}"
    catchtap="{{layoutIndex == index ? '': LayoutTap}}"
    src="{{item.src}}"
    data-index='{{index}}'
    data-type='{{item.key}}'
    mode='widthFix'
    class="{{item.class}} {{layoutIndex == index ? 'layout-avtive' : ''}}"
    wx:if='{{item.key == "img"}}'
    style="{{item.css}};top:{{item.attr.top}}px;left:{{item.attr.left}}px;"/>
  <!--背景图  -->
  <image
    wx:if='{{item.key == "background"}}'
    class='{{item.class}}'
    src="{{item.src}}"
    mode='widthFix'
    style="{{item.css}};"/>
    <!--按钮  -->
  <button 
    catchtouchstart="{{layoutIndex == index ? LayoutMoveStart : ''}}"
    catchtouchmove="{{layoutIndex == index ? LayoutMove : ''}}"
    catchtouchend="{{layoutIndex == index ? LayoutMoveEnd: ''}}"
    catchtap="{{layoutIndex == index ? '': LayoutTap}}"
    wx:if='{{mode && item.key == "button"}}'
    class="layout-button-cop {{item.class}} {{layoutIndex == index ? 'layout-avtive' : ''}}"
    data-action="{{item.action || ''}}"
    data-value="{{item.value || ''}}"
    data-index='{{index}}'
    data-type='{{item.type}}'
    style="{{item.css}};top:{{item.attr.top}}px;left:{{item.attr.left}}px;">
    {{item.value}}
    </button>
    <view class="layout-button-cop {{item.class}}"
     style="{{item.css}};top:{{item.attr.top}}px;left:{{item.attr.left}}px;"
      data-action="{{item.action || ''}}"
      data-value="{{item.tel || ''}}"
      data-index='{{index}}'
      data-type='{{item.type}}'
      catchtap="{{item.click + _eventId}}"
      wx:if='{{!mode && item.key == "button"}}'
    >{{item.value}}</view>

    <!--视频  -->
     <image
     catchtouchstart="{{layoutIndex == index ? LayoutMoveStart : ''}}"
    catchtouchmove="{{layoutIndex == index ? LayoutMove : ''}}"
    catchtouchend="{{layoutIndex == index ? LayoutMoveEnd: ''}}"
    catchtap="{{layoutIndex == index ? '': LayoutTap}}"
    class="{{item.class}} {{layoutIndex == index ? 'layout-avtive' : ''}}"
    wx:if="{{mode && item.key == 'video'}}"
    src="{{item.poster}}"
    data-index='{{index}}'
    data-type='{{item.key}}'
    data-value="{{item.value || ''}}"
    style="{{item.css}};top:{{item.attr.top}}px;left:{{item.attr.left}}px;"/>
 <video class="layout-video"
     id="myVideo"
     src="{{item.src}}"
     wx:if="{{!mode && item.key == 'video'}}"
     style="{{item.css}};top:{{item.attr.top}}px;left:{{item.attr.left}}px;"
     objectFit="cover" controls></video>
<!-- 表单组件  -->
<form
  catchtouchstart="{{layoutIndex == index ? LayoutMoveStart : ''}}"
  catchtouchmove="{{layoutIndex == index ? LayoutMove : ''}}"
  catchtouchend="{{layoutIndex == index ? LayoutMoveEnd: ''}}"
  catchtap="{{layoutIndex == index ? '': LayoutTap}}"
  data-index='{{index}}'
  data-type='{{item.type}}'
  class="{{item.class}} {{layoutIndex == index ? 'layout-avtive' : ''}}"
  wx:if='{{item.key == "form"}}'
  style="width:{{item.attr.width}};z-index:{{item.attr['z-index']}};top:{{item.attr.top}}px;left:{{item.attr.left}}px;"
  bindsubmit="{{item.submit + _eventId}}">
    <block
    wx:for="{{item.field}}"
    wx:for-item="i"
    wx:key="{{index}}">
       <view class="layout-input"
      wx:if="{{i.type == 'input' && mode}}">{{i.name}}</view>
      <view class="layout-button"
      wx:if="{{i.type == 'button' && mode}}"
      style="background:{{item.attr.background}};color:{{item.attr.color}};text-align:{{item.attr['text-align']}};font-size:{{item.attr['font-size']}};">{{i.name}}</view> 

      <input name="{{index}}"
      class="layout-input"
      wx:if="{{i.type == 'input' && !mode}}"
      placeholder="{{i.name}}"/>
      <button
        wx:if="{{i.type == 'button' && !mode}}"
        class="layout-button"
        formType="submit"
        style="background:{{item.attr.background}};color:{{item.attr.color}};text-align:{{item.attr['text-align']}};font-size:{{item.attr['font-size']}};">{{i.name}}</button>
    </block>
  </form>
</template>
