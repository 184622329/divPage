page {
  background: #f2f2f2;
}
.list {}

.list .item {
  margin-top:20rpx;
  padding: 0 40rpx;
  font-size: 30rpx;
  color: #666;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: flex-start;
}
.list .item .lable {
  width: 140rpx;
}
.list .item .additional {
  width: 160rpx;
  text-align: center;
  border-left: 1rpx solid #f2f2f2;
}
.list .item .value {
  flex: 1;
}
.list .item input{
  width: 100%;
  height: 100rpx;
}

.btn {
  width: 80%;
  margin: 0 auto;
  margin-top:50rpx;
  background: #f37c7b;
  font-size: 35rpx;
  color: #fff;
  border-radius: 0;
}
.btn::after {
  border:none;
}