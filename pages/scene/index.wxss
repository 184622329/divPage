page {
  background: #f2f2f2;
}
.scroll-view {
  position: absolute;
  left:0;right:0;
  top:0;bottom: 98rpx;
}
.index-list{
  padding: 20rpx;
}
.index-list .item {
  position: relative;
  height: 200rpx;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
}
.index-list .item .img {
  width: 160rpx;
  height: 160rpx;
  background: red;
}
.index-list .item .img image {
  width: 100%;
  height: 100%;
}

.index-list .item .content {
  flex: 1;
  width: 160rpx;
  height: 160rpx;
  margin-left:20rpx;
  position: relative;
}
.index-list .item .title {
  color: #333;
}
.index-list .item .describe {
  color: #333;
  font-size: 30rpx;
}
.index-list .item .tool {
  position: absolute;
  bottom: 0;
  width: 100%;
  font-size: 26rpx;
  color: #666;
}
.index-list .item .status {
  position: absolute;
  transform:rotate(40deg);
  right: -90rpx;top:-30rpx;
  background: #01cc33;
  padding: 10rpx;
  font-size: 20rpx;
  color: #fff;
  height: 80rpx;
  line-height: 120rpx;
  width: 200rpx;
  text-align: center;
}