page {
  background: #f2f2f2;
}

.list .item {
  margin-top:20rpx;
  padding: 0 40rpx;
  font-size: 30rpx;
  color: #666;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: flex-start;
}
.list .item .lable {
  width: 140rpx;
}
.list .item .value {
  flex: 1;
}
.list .item input{
  width: 100%;
  height: 100rpx;
}

.formbtn {
  display: flex;
  padding: 0 10rpx;
  justify-content: space-between;
}

.btn {
  flex: 1;
  margin: 0 10rpx;
  margin-top:50rpx;
  background: #f37c7b;
  font-size: 35rpx;
  line-height: 86rpx;
  color: #fff;
  border-radius: 0;
  text-align: center;
}
.btn::after {
  border:none;
}
.close {
  background: #ccc;
}